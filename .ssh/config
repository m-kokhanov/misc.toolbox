# GitHub
Host github.com
    HostName github.com
    IdentityFile ~/.ssh/{file-name}.id_rsa

# GitLab
Host gitlab.com
    HostName gitlab.com
    IdentityFile ~/.ssh/{file-name}.id_rsa

# GitLab [ {alias} ]
# a sample to provide alternate key for the same "host" but a different user
# or a service (with a separate key)
# the downside, when adding the remote, the repository url must be tweaked:
#
# sample:
#   orig: git@github.com:{username}/repository-name.git
#   new:  git@github.com-{alias}:{username}/repository-name.git
#
# Host gitlab.com-{alias}
#     HostName gitlab.com
#     IdentityFile ~/.ssh/{file-name}.{alias}.id_rsa

# BitBucket
Host bitbucket.org
    HostName bitbucket.org
    IdentityFile ~/.ssh/{file-name}.id_rsa
